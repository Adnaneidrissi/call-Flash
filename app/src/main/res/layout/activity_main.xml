<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/bgprj">

    <!-- Titre de l'application ou de la fonctionnalité -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flash Alert"
        android:textSize="50sp"
        android:layout_marginBottom="40dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/coffee_healing_italic"
        />

    <!-- Switch pour activer ou désactiver les alertes flash -->
    <Switch
        android:id="@+id/switchFlash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Flash Alerts"
        android:textSize="40sp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        tools:ignore="UseSwitchCompatOrMaterialXml"
   />


</LinearLayout>

